{
  "name": "Fluxterm Developer Environment",
  "dockerFile": "Dockerfile",
  "context": "../",

  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
  },
      "extensions": [
        "ms-vscode.cmake-tools",
        "ms-python.python"
      ]
    }
  },
  "postStartCommand": "git config --global --add safe.directory /workspaces/fluxterm"
}